# GoLeapAI Environment Configuration
# Copy this file to .env and customize as needed

# Server Configuration
SERVER_PORT=8080
SERVER_HOST=0.0.0.0
SERVER_HTTP3=true

# TLS Configuration (optional)
SERVER_TLS_ENABLED=false
SERVER_TLS_CERT=/path/to/cert.pem
SERVER_TLS_KEY=/path/to/key.pem

# Database Configuration
DATABASE_TYPE=postgres  # sqlite, postgres
DATABASE_CONNECTION=postgresql://goleapai:password@localhost:5432/goleapai?sslmode=disable
DATABASE_MAX_CONNS=25
DATABASE_LOG_LEVEL=warn

# Redis Configuration
REDIS_HOST=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Providers Configuration
PROVIDERS_AUTO_DISCOVERY=true
PROVIDERS_HEALTH_CHECK_INTERVAL=5m
PROVIDERS_DEFAULT_TIMEOUT=30s

# Routing Configuration
ROUTING_STRATEGY=cost_optimized  # cost_optimized, latency_first, quality_first
ROUTING_FAILOVER_ENABLED=true
ROUTING_MAX_RETRIES=3

# Monitoring Configuration
MONITORING_PROMETHEUS_ENABLED=true
MONITORING_PROMETHEUS_PORT=9090
MONITORING_LOGGING_LEVEL=info
MONITORING_LOGGING_FORMAT=json

# Application
GOLEAPAI_ENV=production
LOG_LEVEL=info

# Security (JWT, API Keys)
JWT_SECRET=change_this_secret_key_in_production
API_KEY_LENGTH=32

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m

# Cache Configuration
CACHE_TTL=300s
CACHE_MAX_SIZE=1000
